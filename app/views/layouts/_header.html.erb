<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Baller Resources", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if student_logged_in? %>
            <ul class="dropdown-menu">
              <li><%= link_to current_student.username, current_student %></li>
              <li><%= link_to "Edit", current_student %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% elsif teacher_logged_in? %>
            <ul class="dropdown-menu">
              <li><%= link_to current_teacher.username, current_teacher %></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Register new student", new_student_path %></li>
          <li><%= link_to "Log in as a teacher", teacher_login_path %></li>
          <li><%= link_to "Log in as a student", student_login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
