<h1> Create a new resource </h1>

<% if @resource.errors.any? %>
  <ul>
    <% @resource.errors.full_messages.each do |msg| %>
    <li> <%= msg %> </li>
  </ul>
  <% end %>
<% end %>

<div>
  <%= form_for(@resource) do |f| %>
    Title:   <%= f.text_field :title %>
    Content: <%= f.text_field :content %>
    Link:    <%= f.text_field :link %>
             <%= f.submit %>
  <% end %>
</div>
